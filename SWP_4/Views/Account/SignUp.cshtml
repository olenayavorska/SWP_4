@model SWP_4.Models.SignupModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h3>Sign Up</h3>

<form asp-action="Signup" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Enter your e-mail</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" /><br />
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" /><br />
        </div>
        <div class="form-group">
            <input type="submit" value="sign up" class="btn" />
        </div>
    </div>
</form>
